;; FREd -- File Reader and Editor

use std

fn main
    "> " ask store inp
    
end


fn newfile
    clearscr
    "\nName > " ask std_newf
    main
end

fn openfile
    clearscr
    "\nName > " ask std_openf
    main
end

fn help
    clearscr
    "\nNot yet" .
end

clearscr
"\nFREd v0\n [n]ew file\n [o]pen file\n [h]elp\n [q]uit" .

"> " ask store x

x std_match
release x
{newfile} "n" std_case
{openfile} "o" std_case
{help} "h" std_case
{quit} "q" std_case